<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:osgix="http://www.eclipse.org/gemini/blueprint/schema/blueprint-compendium"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:ctx="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
		http://www.osgi.org/xmlns/blueprint/v1.0.0
		http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
		http://www.eclipse.org/gemini/blueprint/schema/blueprint-compendium
		http://www.eclipse.org/gemini/blueprint/schema/blueprint-compendium/gemini-blueprint-compendium.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-4.2.xsd
		http://www.springframework.org/schema/tx
		http://www.springframework.org/schema/tx/spring-tx-4.2.xsd">
	
	<!-- Service References -->
	
	<reference id="txManager" interface="org.springframework.transaction.PlatformTransactionManager"
		filter="(db=central)"/>
		
	<reference id="mailSender" interface="org.springframework.mail.MailSender"/>

	<reference id="outboundMailDao" interface="net.solarnetwork.central.dras.dao.OutboundMailDao"/>
	<reference id="eventDao" interface="net.solarnetwork.central.dras.dao.EventDao"/>
	<reference id="programDao" interface="net.solarnetwork.central.dras.dao.ProgramDao"/>
	<reference id="userDao" interface="net.solarnetwork.central.dras.dao.UserDao"/>
	
	<!-- Published Services -->

	<service ref="simpleAlertBiz" 
		interface="net.solarnetwork.central.dras.biz.AlertBiz"
		ranking="1"/>

	<service ref="eventChangeListener" interface="org.osgi.service.event.EventHandler">
		<service-properties>
			<entry key="#{T(org.osgi.service.event.EventConstants).EVENT_TOPIC}">
				<array value-type="java.lang.String">
					<value>net/solarnetwork/central/dras/ENTITY_UPDATE</value>
				</array>
			</entry>
			<entry key="#{T(org.osgi.service.event.EventConstants).EVENT_FILTER}">
				<value>(|(ClassName=net.solarnetwork.central.dras.domain.Event)(ClassName=net.solarnetwork.central.dras.domain.Program))</value>
			</entry>
		</service-properties>
	</service>

	<!-- Supporting Services -->
	
	<!-- See http://forum.springsource.org/archive/index.php/t-54188.html for discussion
		on getting component-scan to work in PDE. We are required to add are Eclipse build
		path to the Bundle-Classpath value. -->
	<ctx:annotation-config/>
	<ctx:component-scan base-package="net.solarnetwork.central.dras.biz.alert"/>

	<!-- Use Java @Transactional annotations to declare transactions. -->
	<tx:annotation-driven transaction-manager="txManager"/>

	<bean id="transactionTemplate" class="org.springframework.transaction.support.TransactionTemplate">
		<property name="transactionManager" ref="txManager"/>
	</bean>

	<bean id="eventChangeListener"
		class="net.solarnetwork.central.dras.biz.alert.EntityNotificationListener">
		<property name="alertBiz" ref="simpleAlertBiz"/>
		<property name="alertTypeMapping">
			<map>
				<entry key="#{T(net.solarnetwork.central.dras.biz.Notifications.EntityChangeType).Created}">
					<value>#{T(net.solarnetwork.central.dras.biz.AlertBiz).ALERT_TYPE_ENTITY_CREATED}</value>
				</entry>
				<entry key="#{T(net.solarnetwork.central.dras.biz.Notifications.EntityChangeType).Modified}">
					<value>#{T(net.solarnetwork.central.dras.biz.AlertBiz).ALERT_TYPE_ENTITY_MODIFIED}</value>
				</entry>
				<entry key="#{T(net.solarnetwork.central.dras.biz.Notifications.EntityChangeType).MembershipUpdated}">
					<value>#{T(net.solarnetwork.central.dras.biz.AlertBiz).ALERT_TYPE_ENTITY_MODIFIED}</value>
				</entry>
			</map>	
		</property>
		<property name="daoMapping">
			<map>
				<entry key="net.solarnetwork.central.dras.domain.Event" value-ref="eventDao"/>
				<entry key="net.solarnetwork.central.dras.domain.Program" value-ref="programDao"/>
			</map>
		</property>
	</bean>
	
</blueprint>
